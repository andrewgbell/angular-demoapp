{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appContainerName": {
      "type": "string",
      "defaultValue": "app-container"
    },
    "apiContainerName": {
      "type": "string",
      "defaultValue": "api-container"
    }
  },
  "variables": {
    "apiPort": "8080",
    "apiImage": "bencuk/angular-demoapp-api",
    "appPort": "3000",
    "appImage": "bencuk/angular-demoapp",
    "storageAcctName": "[uniqueString(resourceGroup().name)]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[variables('storageAcctName')]",
      "apiVersion": "2016-01-01",
      "location": "[resourceGroup().location]"
    },
    {
      "name": "[parameters('apiContainerName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2017-08-01-preview",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAcctName'))]"
      ],
      "properties": {
        "containers": [
          {
            "name": "[parameters('apiContainerName')]",
            "properties": {
              "image": "[variables('apiImage')]",
              "ports": [
                {
                  "port": "[variables('apiPort')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1.0,
                  "memoryInGb": 1.0
                }
              },
              "environmentVariables": [
                {
                  "name": "APPSETTING_STORAGE_ACCOUNT",
                  "value": "[variables('storageAcctName')]"
                },
                {
                  "name": "APPSETTING_STORAGE_KEY",
                  "value": "[listKeys(variables('storageAcctName'), '2015-05-01-preview').key1]"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "[variables('apiPort')]"
            }
          ]
        }
      }
    },
    {
      "name": "[parameters('appContainerName')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2017-08-01-preview",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.ContainerInstance/containerGroups', parameters('apiContainerName'))]"
      ],
      "properties": {
        "containers": [
          {
            "name": "[parameters('appContainerName')]",
            "properties": {
              "image": "[variables('appImage')]",
              "ports": [
                {
                  "port": "[variables('appPort')]"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1.0,
                  "memoryInGb": 1.0
                }
              },
              "environmentVariables": [
                {
                  "name": "APPSETTING_API_ENDPOINT",
                  "value": "[concat('http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('apiContainerName'))).ipAddress.ip, ':', variables('apiPort'), '/things')]"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": "[variables('appPort')]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "appUrl": {
      "type": "string",
      "value": "[concat( 'http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('appContainerName'))).ipAddress.ip, ':', variables('appPort') )]"
    },
    "apiUrl": {
      "type": "string",
      "value": "[concat( 'http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('apiContainerName'))).ipAddress.ip, ':', variables('apiPort') )]"
    }
  }
}